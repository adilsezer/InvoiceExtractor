<Window x:Class="InvoiceExtractor.Views.TemplateSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Template" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select a Template" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <ListBox ItemsSource="{Binding Templates}" SelectedItem="{Binding SelectedTemplate}" DisplayMemberPath="TemplateName" Height="200"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OK_Click"/>
                <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
